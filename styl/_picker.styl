.tqb-date-picker
  background-color white
  position fixed
  top 0
  left 0
  right 0
  bottom 0
  font-size root-font-size
  z-index 1024
  transition all 0.2s
  display flex
  flex-direction column
  -webkit-tap-highlight-color: rgba(0,0,0,0);

  &.static
    position static
    width 375px
    height 667px
    border 1px solid border-color

  &.hide
    display none !important

  &.out
    transform scale(0.85)
    opacity 0.85

  .container
    flex 1
    overflow-y auto
    -webkit-overflow-scrolling touch

@import "picker/_header.styl"
@import "picker/_labels.styl"
@import "picker/_calendar.styl"