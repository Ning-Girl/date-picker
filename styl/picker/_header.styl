.tqb-date-picker .tqb-dp-header

  h3
    text-align center
    line-height header-height
    font-size 1.2em
    font-weight normal
    margin 0

  button
    position absolute
    top 0
    background-color white
    border none
    color gray
    padding 0
    height header-height - 2px
    line-height header-height - 6px

    &:first-child
      font-size 1.5em
      left 0
      width 40px

    &.confirm-button
      right 0
      font-size 1em
      width 60px